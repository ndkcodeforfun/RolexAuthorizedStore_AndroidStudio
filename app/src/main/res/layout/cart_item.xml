<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="69dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars"/>
    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="113dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp"/>
        <TextView android:id="@+id/tvItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp"/>
        <EditText
            android:id="@+id/tvItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:inputType="number"
            tools:ignore="Suspicious0dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@color/red"
        android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>