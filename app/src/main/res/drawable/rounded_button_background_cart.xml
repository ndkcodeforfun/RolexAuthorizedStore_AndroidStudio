<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B9F8B5" /> <!-- Pressed color -->
            <corners android:radius="12dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#25B1FD"
                android:endColor="#80D2FF"
                android:angle="45" /> <!-- Gradient background -->
            <corners android:radius="12dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>